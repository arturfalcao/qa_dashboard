# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/qa_dashboard

# JWT Secrets (change in production!)
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-in-production

# Storage Configuration (MinIO / DigitalOcean Spaces / S3)
# For DigitalOcean Spaces:
#   MINIO_ENDPOINT=<region>.digitaloceanspaces.com (e.g., nyc3.digitaloceanspaces.com)
#   MINIO_PORT=443
#   MINIO_ACCESS_KEY=<your-spaces-access-key>
#   MINIO_SECRET_KEY=<your-spaces-secret-key>
#   MINIO_USE_SSL=true
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_PHOTOS_BUCKET=pp-photos
MINIO_REPORTS_BUCKET=pp-reports
MINIO_USE_SSL=false

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Environment
NODE_ENV=development
